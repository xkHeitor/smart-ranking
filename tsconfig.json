{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@configs": [
        "configs"
      ],
      "@main": [
        "apps/initial/src"
      ],
      "@api-gateway": [
        "apps/api-gateway2/src"
      ],
      "@app/test": [
        "libs/test/src"
      ],
      "@app/test/*": [
        "libs/test/src/*"
      ]
    }
  }
}